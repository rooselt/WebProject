@model List<TCC.Web.Models.ColaboradorViewModel>
@{
    ViewBag.Title = "Cadastro de Colaborador";
}

<div class="content">
    <div class="main-header">
        <h2>Cadastro de Colaborador</h2>
    </div>
    <div class="main-content">
        <div class="widget">
            <div class="widget-header">
                <h3><i class="fa fa-edit"></i>Cadastro de Colaborador</h3>
            </div>
            <div class="widget-content">
                <form id="colaboradorForm" class="forms-elements">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <select id="idEmpresa" name="idEmpresa" class="form-control required" placeholder="Empresa"></select>
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="form-group">
                                <select id="idPerfil" name="idPerfil" class="form-control required" placeholder="Perfil"></select>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <input type="text" id="nome" name="nome" class="form-control required" placeholder="Nome">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-3">
                            <div class="form-group">
                                <input type="text" id="cpf" name="cpf" class="form-control cpf required" placeholder="CPF">
                            </div>
                        </div>
                        <div class="col-sm-5">
                            <div class="form-group">
                                <input type="text" id="email" name="email" class="form-control" placeholder="Email">
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <select class="form-control" id="idAtividade" name="idAtividade">
                                    <option>Selecione...</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="pull-right">
                                <button id="btnNovo" class="btn btn-default btn-cons m-b-10" type="button" style="display:none">
                                    <i class="fa fa-plus"></i> <span class="bold">Novo</span>
                                </button>
                                <button id="btnSalvar" class="btn btn-success btn-cons m-b-10" type="button">
                                    <i class="fa fa-save"></i> <span class="bold">Salvar</span>
                                </button>
                            </div>
                        </div>
                    </div>
                    <input type="hidden" id="Id" name="Id" />
                </form>
                <hr class="inner-separator">
                <div class="row">
                    <div class="col-md-12">
                        <div id="panel">
                            @Html.Partial("_Table", Model)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /main-content -->
</div>


@Html.Partial("_ModalDelete")


@section scripts{
    <script>
        $("body").removeClass().addClass("forms-elements");
    
    </script>
    <script src="~/assets/js/king-elements.js"></script>
    <script src="~/Scripts/Util/crud-base.js"></script>
    <script src="~/Scripts/Util/baseJs.js"></script>
    <script src="~/Scripts/Util/address.js"></script>
    <script src="~/Scripts/Cadastro/colaborador.js"></script>
}
